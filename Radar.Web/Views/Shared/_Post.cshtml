@model Post

<link rel="stylesheet" href="~/css/post.css" />

<article class ="post">
    <div class="post-header">
        <div class="post-picture"></div>
        <div class="post-title">
            <a href=""><p class="post-username">@Model.Pessoa.Nome</p></a>
            <p>sobre <a href="">@Model.Local.Nome</a></p>
        </div>
        <div class="post-rate">
            @for (int i = 1; i <= Model.Avaliacao; i++)
            {
                @Html.Raw("<i class=\"fa-solid fa-star fa-lg\"></i>")
                ;
            }
            @for (int i = Model.Avaliacao + 1; i <= 5; i++)
            {
                @Html.Raw("<i class=\"fa-regular fa-star fa-lg\"></i>")
                ;
            }
        </div>
    </div>
    <p>
        @Model.Conteudo
    </p>
    <p class="datetime">@Model.DataPostagem.ToString("f")</p>
    <div class="post-reaction">
        <div class="post-like">
            <i class="post-like-icon fa-solid fa-heart fa-lg"></i>
            <p class="post-like-counter">@Model.Curtidas</p>
        </div>
    </div>
</article>