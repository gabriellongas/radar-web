@model Pessoa
@{
    Layout = null;
}
﻿
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/cadastro.css">
    <title>Formulario responsivo com html e css</title>
</head>

<body>
    <div class="box">
        <div class="form-box">
            <h2>Criar Conta</h2>
            <p> Já é membro? <a href="/Login/Index"> Login </a> </p>
            <form asp-action="Register" method="post">
                <div class="input-group">
                    <label for="nome"> Nome Completo</label>
                    <input asp-for="Nome" placeholder="Digite o seu nome completo" />
                    <span asp-validation-for="Nome"></span>
                </div>
                <div class="input-group">
                    <label for="email">E-mail</label>
                    <input asp-for="Email" placeholder="Digite o seu email" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="input-group">
                    <label for="usuario">Nome de usuário</label>
                    <input asp-for="Login" placeholder="Digite o seu nome de usuário" />
                    <span asp-validation-for="Login"></span>
                </div>

                <div class="input-group">
                    <label for="usuario">Data de Nascimento</label>
                    <input asp-for="DataNascimento" placeholder="Digite o sua data de nascimento" />
                    <span asp-validation-for="DataNascimento"></span>
                </div>
                <div class="input-group ">
                    <label for="senha">Senha</label>
                    <input asp-for="Senha" placeholder="Digite sua senha" />
                    <span asp-validation-for="Senha"></span>
                </div>

                <div class="input-group">
                    <button>Cadastrar</button>
                </div>

            </form>
        </div>
    </div>
</body>
</html>